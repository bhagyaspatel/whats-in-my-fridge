<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OnboardingSplash.Screens.FirstScreenFragment"
    android:background="@color/splash_bg">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_80sdp"
        android:src="@drawable/chef"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_200sdp">

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_orange"
            android:layout_marginEnd="@dimen/_4sdp"
            android:backgroundTint="@color/app_orange"/>

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_orange"
            android:layout_marginEnd="@dimen/_4sdp"
            android:backgroundTint="@color/app_orange"/>

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_orange"
            android:layout_marginEnd="@dimen/_4sdp"
            android:backgroundTint="@color/app_orange"/>

    </LinearLayout>

    <TextView
        android:id="@+id/doTV"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_150sdp"
        android:text="COOK!"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/bungee"/>

    <TextView
        android:id="@+id/para"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doTV"
        android:gravity="center_horizontal"
        android:textColor="@color/text_grey"
        android:text="Discover thousands of recipes prepared by our chefs from all around the word"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextBtn"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/round_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="➜︎"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_65sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>