<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/optionMaleAvtar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/maleAvtar"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/male_chef_avtar"
            android:background="@color/app_orange"
            app:shapeAppearance="@style/circularImageView" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/update_avatar"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionFemaleAvtar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/femaleAvtar"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="@color/app_orange"
            android:src="@drawable/female_chef_avtar"
            app:shapeAppearance="@style/circularImageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/update_avatar"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/camera"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:background="@color/app_orange"
            android:src="@drawable/ic_camera"
            app:shapeAppearance="@style/circularImageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/upload_profile_pic"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"/>
    </LinearLayout>

</LinearLayout>